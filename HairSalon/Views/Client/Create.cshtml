@using HairSalon.Models;

@model HairSalon.Models.Client
<h2>Add a new client</h2>
<div class="well">
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)<br>
    @Html.TextBoxFor(model => model.Name)<br>
    @Html.LabelFor(model => model.StylistID)
    @Html.DropDownListFor(model => model.StylistID, null, "Select Stylist", new { @class = "form-control", required = "required" })
    <input type="submit" value="Add new client" class="btn btn-dark"/>
}
</div>