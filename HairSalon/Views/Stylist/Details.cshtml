@using HairSalon.Models;

@model HairSalon.Models.Stylist 

<h2>Stylist Details</h2>
<button class="btn">@Html.ActionLink("Update stylist details", "Edit", new { id = Model.StylistID })</button>
<button class="btn">@Html.ActionLink("Remove stylist", "Delete", new { id = Model.StylistID })</button>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3>

@if (@Model.Clients.Count == 0)
{
    <h3>No Clients have been added for this stylists! </h3>
} 

@foreach (Client client in Model.Clients)
{
    <li>@Html.ActionLink($"{client.Name}", "Details", "Client", new { id = client.ClientID })</li>
}
